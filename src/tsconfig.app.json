{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "paths": {
            "@angular/*": [
                "../node_modules/@angular/*"
            ],
            "@shared/*": [
                "./app/+shared/*"
            ],
            "@environments/*": [
                "./environments/*"
            ]
        },
        "types": []
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}